<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="by.bsuir.poms.calculator.CalculatorMainActivity">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="5"
        android:rowCount="5"
        android:layout_height="0dp"
        android:layout_weight="5">

        <!-- 0 row -->
        <Button
            android:id="@+id/button_exponentiation"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_exponentiation" />
        <Button
            android:id="@+id/button_left_bracket"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_left_bracket" />
        <Button
            android:id="@+id/button_right_bracket"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_right_bracket" />
        <Button
            android:id="@+id/button_reset"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_reset" />
        <Button
            android:id="@+id/button_erase"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_erase" />

        <!-- 1 row -->
        <Button
            android:id="@+id/button_sqrt"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_sqrt" />
        <Button
            android:id="@+id/button_plus"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_plus" />
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button1" />
        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button2" />
        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button3" />

        <!-- 2 row -->
        <Button
            android:id="@+id/button_factorial"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_factorial" />
        <Button
            android:id="@+id/button_minus"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_minus" />
        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button4" />
        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button5" />
        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button6" />

        <!-- 3 row -->
        <Button
            android:id="@+id/button_sin"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_sin" />
        <Button
            android:id="@+id/button_multiplication"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_multiplication" />
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button7" />
        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button8" />
        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button9" />

        <!-- 0 row -->
        <Button
            android:id="@+id/button_cos"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_cos" />
        <Button
            android:id="@+id/button_division"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_division" />
        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_dot" />
        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button0" />
        <Button
            android:id="@+id/button_equal"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/button_equal" />
    </GridLayout>

</LinearLayout>
